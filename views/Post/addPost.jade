extends ../layout
block content
    if errors
        ul
            each error,i in errors
                li.alert.alert-danger #{error.msg}
    form(method="post",action="/posts/addPost", enctype="multipart/form-data")
        .form-group
            label(for="title") Title:
            input#title.form-control(name="title",type="text",placeholder="Post's title")
        .form-group
            label(for="category") Category:

        if categories
            select.form-control(name="category")
                each category,i in categories
                    option(value="#{category.title}") #{category.title} 
        .form-group
            label(for="body") Body:
            textarea.form-control(name="body" id="body")
        .form-group
            label(for="title") Price:
            input#price.form-control(name="price",type="number",placeholder="Post's price")
            
        .form-group
            label(for="image") Post Image :
            input#image.form-control(name="postImage",type="file",placeholder="Upload Image")              
        .form-group
            input.btn.btn-primary(name="submit",type="submit", value=" Post ")   

        script(src="/ckeditor/ckeditor.js")
        script
            | CKEDITOR.replace("body");
            