extends adminLayout

block content
    .col-md-4.col-md-offset-3
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
        if user
            h2 Change Password for #{user.username} 
            form(method="post",action="/admin/changePassword/#{user._id}")
                .form-group
                    label(for="password") Password :
                    input#password.form-control(name="password",type="password",placeholder="Enter your password")       
                .form-group
                    label(for="password2") Confirm Password :
                    input#password2.form-control(name="password1",type="password",placeholder="Confirm Password")           
                .form-group
                    input.btn.btn-primary(name="submit",type="submit", value="Change Password")
                 