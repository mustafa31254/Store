extends ../layout

block content
    ul.errors
        if errors
            each error,i in errors
                li.alert.alert-danger #{error.msg}
    if user
        h2 Change Password for #{user.username} 
    form(method="post",action="/users/changePassword/#{user.id}", enctype="multipart/form-data")
        .form-group
            label(for="password") Password :
            input#password.form-control(name="password",type="password",placeholder="Enter your password")       
        .form-group
            label(for="password2") Confirm Password :
            input#password2.form-control(name="password1",type="password",placeholder="Confirm Password")           
        input(type="hidden", name="_csrf", value="#{csrf}") 
                        
        .form-group
            input.btn.btn-primary(name="submit",type="submit", value="Change Password")
                 