        .col-xs-12.col-sm-12.col-md-12.col-lg-12
            .jumbotron
                .panel.panel-info

                    .panel-heading
                        h3.panel-title Profile Info! 
                    .panel-body
                        .row
                            .col-md-3.col-lg-3(align='center')
                                img.img-responsive.img-rounded(alt='User Pic' src='/uploads/profileImages/#{user.image}')
                            .col-md-9.col-lg-9
                                table.table.table-user-information
                                    tbody
                                        tr
                                            td Username:
                                            td #{user.username}
                                            
                                        tr
                                            td Email:
                                            td #{user.email}
                                            
                                        tr
                                            td Name
                                                
                                            td #{user.name}
                                        
                                            br
                                            br
                                    
                            
                    .panel-footer
                        
                        a.btn.btn-success.btn-xs(href='/orders/', role='button') 
                            i.fa.fa-shopping-bag
                            |  Your Orders
                            br
                        a.btn.btn-primary.btn-xs(href="/posts/addPost")
                            i.glyphicon.glyphicon-edit 
                            |  Add Product
        
                        
                        //-  a.btn.btn-sm.btn-primary(data-original-title='Broadcast Message', data-toggle='tooltip', type='button')
                        //-     i.glyphicon.glyphicon-envelope
                        span.pull-right
                            a.btn.btn-xs.btn-primary(href='/users/changePassword/#{user._id}')
                                i.fa.fa-key
                                | Change Password

                            a.btn.btn-xs.btn-warning(href='/users/editAccount/#{user._id}')
                                i.glyphicon.glyphicon-edit
                                | Edit Account
    .row
        .col-md-12
            table.table.table-hover.table-responsive
                thead
                    tr 
                        th Title
                        th Picture
                        th Date
                        th Category
                        th Actions

                tbody
                        if posts
                            each post, i in posts
                                tr
                                    td #{post.title}
                                    td 
                                        img.img-rounded(alt='User Pic' src='/uploads/postsImages/#{post.image}' width="70" height="53")
                                    td #{post.createdAt}
                                    td #{post.category}
                                    td 
                                        .btn-group(role='group', aria-label='Basic example')
                                            a.btn.btn-primary.btn-xs(href='/posts/postEdit/#{post._id}')
                                                i.glyphicon.glyphicon-edit 
                                                | Manage
                                            //- a.btn.btn-primary.btn-xs(href='/posts/changePassword/#{user._id}')
                                            //-     i.glyphicon.glyphicon-cog 
                                            //-     | Change Password    
                                            form.form-inline(method='post', action='/posts/deletePost/#{post._id}?_method=DELETE')
                                                button.btn.btn-danger.btn-xs(type='submit') Delete
                            
                            != posts.pagination.render({ baseUrl: '/users/' })

                        else
                            h3.panel-title No Posts
                
                                                       
          