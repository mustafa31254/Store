extends ../layout

block content
    h2.text-primary Registeration
    if info
        li.alert.alert-danger #{info}
    
    ul.errors
        if errors
            each error,i in errors
                li.alert.alert-danger #{error.msg}
    form(method="post",enctype="multipart/form-data", action="/users/register" )
        .form-group
            label(for="Name") Name:
            input#Name.form-control(name="name",type="text",placeholder="Enter your First Name")
        .form-group
            label(for="email") Email:
            input#email.form-control(name="email",type="Email",placeholder="Enter your Email")
         .form-group
            label(for="username") Username:
            input#username.form-control(name="username",type="text",placeholder="Enter your Username") 
        .form-group
            label(for="password") Password :
            input#password.form-control(name="password",type="password",placeholder="Enter your password")       
        .form-group
            label(for="password2") Confirm Password :
            input#password2.form-control(name="password1",type="password",placeholder="Confirm Password")           
         .form-group
            label(for="image") Profile Image :
            input#image.form-control(name="profileImage",type="file",placeholder="Upload Image")  
        input(type="hidden", name="_csrf", value="#{csrf}")
        input.btn.btn-primary(name="submit",type="submit", value="Register")   
              