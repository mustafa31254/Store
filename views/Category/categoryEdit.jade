extends ../Admin/adminLayout

block content
    .col-md-6.col-md-offset-3

        h2.text-primary edit
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
                
        form(method="post",action="/categories/categoryEdit/#{category._id}", enctype="multipart/form-data")
            .form-group
                label(for="title") title:
                input#title.form-control(name="title",type="text",value="#{category.title}")
            img.img-thumbnail(src="/uploads/categoryImages/#{category.image}" width="75" height="80")
 
            .form-group
                label(for="image") Change Category Image :
                input#image.form-control(name="categoryImage",type="file",placeholder="Upload Image")              
                
            .form-group
                input.btn.btn-primary(name="submit",type="submit", value="Edit and submit")   