extends ../Admin/adminLayout

block content
    .col-md-6.col-md-offset-3
        h2.text-primary edit
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
        form(method="post",action="/roles/roleEdit/#{role._id}", enctype="multipart/form-data")
            .form-group
                label(for="name") Name:
                input#name.form-control(name="name",type="text",value="#{role.name}")
            .form-group
                input.btn.btn-primary(name="submit",type="submit", value="Edit Role")   