extends ../Admin/adminLayout
block content
    .col-md-6.col-md-offset-3 
        if errors
            each error,i in errors
                li.alert.alert-danger #{error.msg}
        form(method="post",action="/roles/addRole", enctype="multipart/form-data")
            .form-group
                label(for="name") Name :
                input#name.form-control(name="name",type="text",placeholder="Add Role ")
            .form-group
                input.btn.btn-primary(name="submit",type="submit", value="Add Role")
                    
                       

            